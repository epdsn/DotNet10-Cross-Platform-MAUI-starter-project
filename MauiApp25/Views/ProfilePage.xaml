             x:Class="MauiApp25.Views.ProfilePage"
             Title="Profile">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label x:Name="UsernameLabel" FontSize="18" />
        <Label x:Name="StatusLabel" TextColor="Gray" />
